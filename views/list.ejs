<%- include("header") -%>

        <div class="box" id="heading">
          <h2 style="color:rgb(97, 25, 112)"><%= ListTitle %></h2>
        </div>
        <div class="box">
            <% if (ListTitle=="Work List") { %>
              <% newItem.forEach(function(item){ %>
                <form action="/delete/work" method="post">
                  <div class="item1">
                    <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
                    <p><%= item.name %></p>
                    <sub style="{text-align:right}"> -  <%= item.dd %></sub>
                  </div>
                </form>
              <% }); %>
            <% } else { %>
              <% newItem.forEach(function(item){ %>
                <form action="/delete" method="post">
                  <div class="item1">
                    <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
                    <p><%= item.name %></p>
                    <sub style="{text-align:right}"> -  <%= item.dd %></sub>
                    
                  </div>
                </form>
              <% }); %> 
            <% } %>

            
          <form method="post" action="/">
            <input type="text" name="name" placeholder="enter item" autocomplete="off">
            <button type="submit" name="list" value="<%= ListTitle %>">+</button>
        </form>
        </div>
        
<%- include("footer") -%>
    

